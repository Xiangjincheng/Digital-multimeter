/**背景**/
.container{
  background-image:url("https://i0.hdslb.com/bfs/article/04979fec22b7108a35dee6a1e6bad6563bdc070b.jpg@942w_1677h_progressive.webp");
  background-repeat:no-repeat; 
  background-size:100% 100%;
  -moz-background-size:100 100
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: -50px;
  font-size: 6mm;
  font-style:italic;
  color: #fdf7e5;
}
.userinfo-avatar {
  overflow: hidden;
  border: 1px solid #fdf7e5;
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.usermotto {
  margin-top: -250px;
  font-style: italic;
  font-size: 4.5mm;
  color: #fdf7e5;
}

.button {
  width: 80%;
  margin-top: 20rpx;
  background-color: rgba(222, 184, 135, 0.719);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.button-hover{
  width: 80%;
  margin-top: 20rpx;
  background-color: rgba(222, 184, 135, 0.479);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

  
  
